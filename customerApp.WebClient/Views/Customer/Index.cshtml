@model IEnumerable<CustomerApp.DataLayer.Models.Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>

<p><a class="btn btn-primary btn-md" onclick="importCustomers()">Customer Import</a></p>

<table class="table" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Customer Detail", "GetCustomer", "Customer", new { customerId = item.Id }, new { @class = "btn btn-sm btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/Scripts/CustomerApp/CustomerFunction.js"></script>
<link href="~/Scripts/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Scripts/sweetalert2/sweetalert2.min.js"></script>


