@model  customerApp.WebClient.Models.OrderItemViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add Order Item</h2>

@using (Html.BeginForm("AddItem", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ItemDescription)
        @Html.TextBoxFor(model => model.ItemDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ItemDescription)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Quantity)
        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Quantity)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Price)
    </div>
    <div class="form-group">
        @Html.HiddenFor(model => model.OrderId)
    </div>
    

    <button type="submit" class="btn btn-primary">Add Item</button>
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/Scripts/CustomerApp/CreateOrderItem.js"></script>
<link href="~/Scripts/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Scripts/sweetalert2/sweetalert2.min.js"></script>

